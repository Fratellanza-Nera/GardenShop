@model List<GardenShop.Models.Product>

@{
    ViewBag.Title = ViewBag.CategoryName;
}

<div class="container mt-4">
    <h2 class="mb-4 text-success">@ViewBag.CategoryName Products</h2>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="text-success fw-bold">$@product.Price</p>
                        <a href="#" class="btn btn-outline-success">Buy</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>