@{
    ViewBag.Title = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Garden Shop</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-success bg-success shadow-sm py-1">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center text-white fw-semibold fs-5" href="/">
                <img src="~/img/logo.jpg" alt="Veralyn Logo" style="height: 50px; margin-right: 8px;" />
                Garden Shop
            </a>
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav mx-auto text-center gap-3 animate-nav">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Categories/Trees">Trees</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Categories/Flowers">Flowers</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Categories/Tools">Tools</a></li>
                </ul>

                <ul class="navbar-nav">
                    @if (Session["Username"] != null)
                    {
                        <li class="nav-item d-flex align-items-center text-white me-2">
                            Welcome, @Session["Username"]!
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm ms-2" href="/Account/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm ms-2" href="/Account/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-4 mt-5 border-top">
        <p class="mb-0">&copy; @DateTime.Now.Year Garden Shop. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>